<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <RelativeLayout
      android:id="@+id/header_menu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <ImageView
          android:id="@+id/profileImageView"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/nav_header_profile"
          android:layout_margin="16dp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="mehrdad"
          android:textColor="@android:color/black"
          android:textSize="20sp"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/profileImageView"
          />

      <ImageButton
          android:id="@+id/moreMenu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_more_vert_black_24dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:background="@android:color/transparent"
          android:padding="12dp"
          />


  </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/niagara"
        android:layout_below="@+id/header_menu"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_below="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_24dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_black_24dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        />

    <TextView
        android:layout_below="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="128 likes"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_favorite_black_24dp"
        />

</RelativeLayout>